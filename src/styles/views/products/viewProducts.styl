    top 18px
    right 18px
    background #fff
    border-radius 50%
    box-shadow 0 2px 8px rgba(31,41,55,0.10)
    transition background 0.2s
    &:hover
      background $secondary-color
      color #fff
  .cart-content
    flex 1 1 auto
    overflow-y auto
    padding 24px 16px 32px 16px
    background #fafbfc
  .cart-summary
    padding 24px 20px 20px 20px
    border-radius 16px 16px 0 0
    background #fff
    box-shadow 0 -2px 12px 0 rgba(31,41,55,0.07)
    position sticky
    bottom 0
    left 0
    right 0
    z-index 10
    display flex
    flex-direction column
    gap 12px
    .cart-total
      width 100%
      margin-bottom 8px
      display flex
      flex-direction row
      justify-content space-between
      align-items flex-end
      .total-label
        font-size 1.08rem
        color $text-primary
      .total-value
        font-size 1.5rem
        color $secondary-color
        font-weight 900
        margin-left 8px
      .total-items
        font-size 1rem
        color $text-primary
        margin-left 8px
    .cart-actions
      width 100%
      max-width 100%
      box-sizing border-box
      display flex
      flex-direction column
      gap 12px
      margin-top 8px
      .continue-btn, .checkout-btn
        width 100%
        min-width 0
        margin 0
        font-size 1.15rem
        min-height 56px
        border-radius 16px
        box-shadow 0 2px 8px 0 rgba(255,214,0,0.10)
        display flex
        align-items center
        justify-content center
        text-align center
        font-weight 700
        letter-spacing 0.5px
        text-transform uppercase
        padding 0
      .checkout-btn
        background linear-gradient(90deg, $secondary-color 0%, #ffce00 100%) !important
        color $text-primary !important
        font-weight 900
        border 2px solid #ffe066
      .continue-btn
        background #f3f4f6 !important
        color $text-primary !important
        font-weight 700

.cart-complements-summary
  margin-top 6px
  margin-bottom 2px
  padding 8px 8px 6px 8px
  border-radius 8px
  background #fff
  box-shadow 0 1px 4px 0 rgba(31,41,55,0.04)
  border 1px solid $grey-border
  transition max-height 0.3s cubic-bezier(.4,0,.2,1), padding 0.2s
  min-width 0

.complement-summary-title
  font-weight 600
  color $text-primary
  font-size 0.98rem
  margin-bottom 4px
  letter-spacing 0.1px
  padding-left 0

.complement-summary-list
  list-style none
  margin 0
  padding 0
  display flex
  flex-direction column
  gap 8px

.complement-summary-item
  display flex
  justify-content space-between
  align-items center
  font-size 1.01rem
  padding 2px 0
  border-bottom none

.complement-summary-name
  color #b0b0b0
  font-size 1.01rem
  max-width 70%
  overflow hidden
  text-overflow ellipsis
  white-space nowrap

.complement-summary-price
  color $secondary-color
  font-weight 900
  font-size 1.05rem
  margin-left 16px

.cart-item-header
  display flex
  align-items flex-start
  justify-content space-between
  gap 8px
  margin-bottom 2px

.cart-item-controls
  display flex
  align-items center
  gap 8px

.cart-details-btn
  min-width 28px
  min-height 28px
  border-radius 50%
  background transparent
  color $secondary-color
  transition background 0.2s, color 0.2s
  &:hover, &:focus
    background #fffbe6
    color $primary-color
  .v-icon
    font-size 1.1em
    transition color 0.2s

.cart-item-value
  color $secondary-color
  font-size 1.18rem
  font-weight 900
  margin 2px 0 4px 0
  letter-spacing 0.2px
  text-align left

@media (max-width: 600px)
  .cart-complements-summary
    padding 10px 8px 8px 8px
    font-size 0.98rem
    margin-top 8px
    margin-bottom 2px
    border-radius 8px
    box-shadow 0 1px 4px 0 rgba(31,41,55,0.06)
    min-width 0
  .complement-summary-title
    font-size 1rem
    margin-bottom 6px
  .complement-summary-list
    gap 6px
  .complement-summary-item
    font-size 0.97rem
    padding 2px 0
  .complement-summary-name
    font-size 0.97rem
  .complement-summary-price
    font-size 1rem
    margin-left 10px
