.fix--v-slide-group
  height: auto
  .theme--light.v-icon.v-icon.v-icon--disabled
    color: var(--v-primary-base) !important

  .v-slide-group__wrapper
    order: 0
    width: 100%
    margin-bottom: 20px
    .v-slide-group__content
      margin-top: 30px !important
  .v-slide-group__prev
    border: 2px solid var(--v-secondary-base)
    background: var(--v-secondary-base)
    border-radius: 60px
    padding: 11px 0
    order: 1
    margin-right: 10px
    i
      color: #000 !important
  .v-slide-group__next
    border: 2px solid var(--v-secondary-base)
    background: var(--v-secondary-base)
    border-radius: 60px
    padding: 11px 0
    order: 1
    margin-right: 10px
    i
      color: #000 !important

.fix-caroucel-cards
  height: 690px !important
  .v-window__container
    order: 0
    .v-window-item
      .v-carousel__item 
        height: 650px !important
    .v-window__prev
      opacity 1 !important
      width: 60px
      height: 60px
      border-radius: 15px
      position: absolute !important
      top: calc(103px - -479px) !important
      left: 0 !important
      background-color: var(--v-secondary-base)
      button
        width: 100%
        height: 100%
        i
          color: #000
          font-size: 30px !important
    .v-window__next
      opacity 1 !important
      width: 60px
      height: 60px
      border-radius: 15px
      position: absolute !important
      top: calc(103px - -479px) !important
      right: 0 !important
      background-color: var(--v-secondary-base)
      button
        width: 100%
        height: 100%
        i
          color: #000
          font-size: 30px !important
